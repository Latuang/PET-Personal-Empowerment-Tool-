{
  "manifest_version": 3,
  "name": "PET â€” Personal Encouragement Tool",
  "version": "0.3.0",
  "description": "A tiny floating pet that cheers you on",
  "icons": {
    "16": "icon128.png",
    "128": "icon128.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],

  "background": {
    "service_worker": "bg.js"
  },

  "content_scripts": [
    {
      "matches": ["https://latuang.github.io/PET-Personal-Empowerment-Tool-/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://latuang.github.io/PET-Personal-Empowerment-Tool-/*"]
    }
  ],

  "externally_connectable": {
    "matches": [
      "https://latuang.github.io/PET-Personal-Empowerment-Tool-/*",
      "http://localhost:3000/*"
    ]
  }
}

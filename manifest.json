{
  "manifest_version": 3,
  "name": "PET â€” Personal Encouragement Thing",
  "version": "0.2.6",
  "description": "A tiny floating buddy that shows motivational text bubbles.",
  "icons": { "16": "icon128.png", "128": "icon128.png" },

  "action": { "default_popup": "popup.html" },

  "permissions": ["storage", "alarms", "notifications", "tabs"],
  "host_permissions": ["<all_urls>"],

  "background": { "service_worker": "bg.js" },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["pet.png"],
      "matches": ["<all_urls>"]
    }
  ],

  "externally_connectable": {
    "matches": [
      "https://latuang.github.io/*",
      "https://latuang.github.io/PET-Personal-Empowerment-Tool-/*",
      "http://localhost:3000/*"
    ]
  }
}
